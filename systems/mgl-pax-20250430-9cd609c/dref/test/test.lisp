     (dref 'test-gf '(method () ((eql #.(find-package :cl)))))))
  (check-dspec-roundtrip (dref 'gf2 '(method (:around) (t))))
  (check-dspec-roundtrip (dref 'gf2 '(method (:after) (t))))
